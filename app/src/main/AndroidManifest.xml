<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.prasi.popularmovies">
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MovieDetailAnimatedActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="@string/activity_detail_title"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.prasi.popularmovies.MainActivity" />
        </activity>
        <activity
            android:name=".MovieSettingsActivity"
            android:label="@string/activity_settings_title"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.prasi.popularmovies.MainActivity" />
        </activity>
        <activity
            android:name=".MovieReviewActivity"
            android:label="@string/activity_settings_title"
            android:parentActivityName=".MovieDetailAnimatedActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.prasi.popularmovies.MovieDetailAnimatedActivity" />
        </activity>
        <provider android:name=".data.MovieProvider"
            android:authorities="com.prasi.popularmovies">
        </provider>
    </application>

</manifest>
